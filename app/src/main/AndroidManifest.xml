<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sedra.goiptv">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".GoApp"
        android:allowBackup="true"
        android:banner="@drawable/logo"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoIPTV"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.department.DepartmentActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.series.SeriesDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.movie.MovieDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.starting.StartingActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.sections.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity android:name=".view.movie.PlayMovieActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>
        <activity android:name=".view.series.SeriesDetailsForTv"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity android:name=".view.series.PlaySeriesActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity android:name=".view.channels.PlayChannelActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity android:name=".view.customsection.CustomSectionActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"  />
        <activity android:name=".view.customsection.PlayItemActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"  />
    </application>

</manifest>